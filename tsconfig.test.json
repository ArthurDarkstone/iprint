{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/test.tsbuildinfo",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedDeclarations": false
  },
  "include": [
    "packages/*/tests",
    "packages/*/src",
    "**/shim.d.ts",
    "**/tsdown.config.ts",
    "./vitest-setup.ts"
  ],
  "exclude": [
    "**/dist",
    "**/tests/fixtures",
    "packages/volar/src",
    "packages/nuxt"
  ]
}
